            <a class="nav-link dropdown-toggle text-light" href="#" role="button" id="accountDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Account </a>

            <% if user_signed_in? %>
            <div class="dropdown-menu" aria-labelledby="accountDropdown">
            <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 
            <div>
          <% else %>
            <div class="dropdown-menu" aria-labelledby="accountDropdown">
                <a class="dropdown-item" href="/users/sign_in">Log In</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="users/sign_up">Sign Up</a>
                </div>
          <% end %>

                
            </li>
        </ul>
    </div>
</nav>
